<configuration>
 <property>
    <name>flink_conf_dir</name>
    <value>/etc/flink/conf</value>
    <description>Path in local file system containing flink configurations</description>
  </property>
  <property>
    <name>flink_user</name>
    <value>flink</value>
    <property-type>USER</property-type>
    <description>User to submit flink jobs</description>
  </property>
  <property>
    <name>flink_group</name>
    <value>flink</value>
    <property-type>GROUP</property-type>
    <description>flink's user group</description>
  </property>
  <property>
    <name>flink_hdfs_home</name>
    <value>/flink</value>
    <description>Home path in HDFS. It will contains directory libs with jars and directory eventLogs</description>
  </property>
</configuration>
